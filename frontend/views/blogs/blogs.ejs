<!DOCTYPE html>
<html lang="en">

<%- include("../partials/header.ejs") %>

  <body>
    <div class="container">
      <div class="device">
        <%- include("../partials/greeting.ejs") %>

          <body>
            <div class="blogs content">
              <h2>ALL BLOGS</h2>
              <% if (blogs.length> 0) { %>
                <% blogs.forEach(blog=> { %>
                  <a class="single" href="/blogs/<%= blog._id %>">
                    <h3 class="title">
                      <%= blog.title %>
                    </h3>
                    <p class="snippet">
                      <%= blog.snippet%>
                    </P>
                  </a>
                  <% }) %>
                    <% } else { %>
                      <p> There are no blogs </p>
                      <% } %>
            </div>
            <%- include("../partials/nav.ejs") %>
      </div>
    </div>

  </body>
