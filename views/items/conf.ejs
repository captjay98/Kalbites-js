<html lang="en">

<%- include("../partials/header.ejs")  %>

 <body>
 <main class="ticket-system">
 <h2><%= detail.chop.name %></h2>
    <h2><%= detail.chop.price %></h2>


    <div class="content">
      <p><%= detail.buyer.address %></p>
       <h2><%= detail.buyer.name %></h2>
     <div class="top">
     <h1 class="title">Here's your ticket!</h1>
     <div class="printer" />
     </div>
     <div class="receipts-wrapper">
        <div class="receipts">
           <div class="receipt">

              <div class="route">
                 <h2><%= detail.buyer.name %></h2>
                 <i class="fas fa-angle-right"></i>
                 <h2><%= detail.buyer.phone %></h2>
              </div>
              <div class="details">

                 <div class="item">
                    <span>Passenger</span>
                 <h3><%= detail.chop.name %></h3>
                 </div>

                 <div class="item">
                    <span>Class</span>
                    <h3><%= detail.chop.price %></h3>
                 </div>

                 <div class="item">
                  <span>Date</span>
                  <h3><%= detail.chop.price %></h3>
               </div>

               <div class="item">
                  <span>Seat</span>
                  <h3><%= detail.buyer._id %></h3>
               </div>

                 <div class="item">
                    <span>Departure Time</span>
                    <h3>{<%= detail.buyer.address %></h3>
                 </div>

                 <div class="item">
                    <span>Arrival Time</span>
                    <h3>{<%= detail.createdAt %></h3>
                 </div>

              </div>
           </div>
           <div class="receipt qr-code">
            <img src="{% static 'img/frame.png' %}" alt="" class="qr">
              <div class="description">
                 <h2></h2>
                 <p>Show QR-code when requested</p>
              </div>
           </div>
        </div>
     </div>
     <a href="#" class="btn">Download</a>
     {% endfor %}
  </main>
<%- include("../partials/footer.ejs")  %>

 </body>
 </html>
