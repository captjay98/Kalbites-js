<!DOCTYPE html>
<html lang="en">

<%- include("../partials/header.ejs") %>

  <body>
    <div class="container">
      <div class="device">
        <%- include("../partials/greeting.ejs") %>

          <div class="videobox">

            <div class="wrapper">
              <!-- <button type="button" class="play"></button> -->
              <h3>SELECT CAKE</h3>
            </div>
          </div>

          <div class="recipes">
            <% items.forEach ( (item)=>{ %>
              <a class="single" href="cakes/<%= item._id %>">
                <div class="recipe detail">
                  <img src="/images/bentocake.jpg" alt="">

                  <div class="description">


                    <div class="info">
                      <span>
                        <%= item.quantity %>
                      </span>
                      <span>
                        <%= item.name%>
                      </span>
                      C


                      <span>Size <%= item.size %></span>

                    </div>
                    <div class="price">
                      <span>
                        <%= item.price %> Naira
                      </span>
                    </div>
                  </div>
                </div>
              </a>
              <% })%>

          </div>
          <%- include("../partials/nav.ejs") %>
      </div>
    </div>
  </body>

</html>
